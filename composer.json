{
  "name": "php-chatwork-client",

  "require": {
    "php": ">=7.1.8",
    "guzzlehttp/guzzle": "^7.1",
    "tightenco/collect": "^8.0",
    "ext-json": "*",
    "nesbot/carbon": "^2.41"
  },

  "require-dev": {
    "phpunit/phpunit": "*",
    "friendsofphp/php-cs-fixer": "*",
    "phpstan/phpstan": "*",
    "phpspec/prophecy-phpunit": "^2.0"
  },

  "autoload": {
    "psr-4": {
      "ChatWorkClient\\": "src/"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "ChatWorkClient\\": "tests/"
    }
  },

  "scripts": {
    "test": "./vendor/bin/phpunit",
    "cs": "./vendor/bin/php-cs-fixer fix",
    "phpstan": "vendor/bin/phpstan analyse -l 1 ./src"
  }
}
