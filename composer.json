{
  "name": "nexus4812/php-chatwork-client",

  "require": {
    "php": ">=7.1.3",
    "guzzlehttp/guzzle": "^7.1",
    "nesbot/carbon": ">=2.0",
    "illuminate/collections": ">=8.0",
    "ext-json": "*"
  },

  "require-dev": {
    "phpunit/phpunit": "*",
    "friendsofphp/php-cs-fixer": "*",
    "phpstan/phpstan": "*",
    "phpspec/prophecy-phpunit": "*"
  },

  "autoload": {
    "psr-4": {
      "ChatWorkClient\\": "src/"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "ChatWorkClient\\": "tests/"
    }
  },

  "scripts": {
    "test": "./vendor/bin/phpunit",
    "cs": "./vendor/bin/php-cs-fixer fix",
    "stan": "vendor/bin/phpstan analyse -l 1 ./src"
  }
}
